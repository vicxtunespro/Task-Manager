<%- include('partials/header')%>

<div style="background-image: url('<%= blog.thumbnail %>');" class="featured-image px-2 md:px-4 lg:px-16 h-96 w-screen flex flex-col justify-center items-center bg-red-600 text-slate-50 relative">
    <div class="overlay bg-slate-600 bg-opacity-80 w-full h-full absolute"></div>
    <%- include('partials/navbar')%>
    <div class="w-full h-72 md:h-96 relative">
        
        <div class="absolute bottom-8 flex flex-col">
            <a class="bg-orange-400 my-4 w-40 text-center py-2 rounded">Add to Favorite</a>
            <span class="text-2xl font-semibold"><%= blog.title %></span>
            <div class="description font-light pr-16 line-clamp-2"><%= blog.description %></div>
            <div class="flex justify-between w-full mt-8">
                <span class="text-xs">By <span class="font-bold"><%= blog.author %></span></span>
                <span class="text-xs"><%= blog.date %></span>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer')%>